<h1>Roles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.nombre %></td>
            </td>
        <td>  <%= link_to edit_role_path(role), class: 'btn btn-default btn-sm'  do %>     
            <i class="fa fa-pencil fa-2x" ></i></i>
            <% end %></td>
        <td><%= link_to role, class:'btn btn-default btn-sm', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-trash fa-2x"></i>
            <% end %>
</td>
      </tr>
    <% end %>
  </tbody>
</table>

