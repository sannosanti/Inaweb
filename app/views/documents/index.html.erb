  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title text-center"  >Documentos</h3>
    </div>
    <table class="table table-bordered">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Categoria</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.titulo %></td>
          <td><%= get_categoria(document.categoria) %></td>
          <td><%= document.descripcion %></td>
          <td class= "text-center">
            <%= link_to document, class:'btn btn-default btn-sm' do %>
              <i class="glyphicon glyphicon-eye-open "></i>
            <% end %>
          </td>         
          <td class= "text-center">
          <%= link_to document, class: 'btn btn-default btn-sm'  do %>     
            <i class= "glyphicon glyphicon-pencil"></i>
          </td>
          <% end %>

          <td><%= link_to document, class:'btn btn-default btn-sm', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class= "glyphicon glyphicon-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  </div>

  <br>
<div class= "text-center"><%= link_to 'Nuevo Documento', new_document_path, class:'btn btn-default' %></div>
  